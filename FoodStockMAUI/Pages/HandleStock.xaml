<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodStockMAUI.Pages.HandleStock"
             Title="FoodsStock">
    
    <ContentPage.Resources>
        <Style TargetType="Entry">
            <Setter Property="Margin" Value="10,0,10,0"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10,10,20,0"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto" ColumnDefinitions="*,*,*" ColumnSpacing="5">
        <TableView Intent="Data" Grid.Row="0" Grid.Column="3">
            <TableRoot>
                <TableSection Title="Enter food">
                    <EntryCell Text="{Binding Path=FoodStock.Name}"
                        Placeholder="Enter food to add" />
                </TableSection>
                <TableSection Title="Enter food">
                    <EntryCell Text="{Binding Path=FoodStock.Left}"
                        Placeholder="Enter remaining food number" />
                </TableSection>
            </TableRoot>
        </TableView>
        <Button Text="Save" Clicked="OnAdd" />
        <Button Text="Delete" Clicked="OnDelete" />
        <Button Text="Cancel" Clicked="OnCancel" />
    </Grid>
</ContentPage>